{
  "statusline": {
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "env": {
    "CLAUDE_CODE_VERBOSE": "1",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "24576",
    "PAI_DIR": "~/.claude"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/security-validator.ts"
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/capture-all-events.ts --event-type PreToolUse"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/capture-all-events.ts --event-type PostToolUse"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/update-tab-titles.ts"
          },
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/capture-all-events.ts --event-type UserPromptSubmit"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/stop-hook.ts"
          },
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/stop-hook-voice.ts"
          },
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/capture-all-events.ts --event-type Stop"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/subagent-stop-hook.ts"
          },
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/subagent-stop-hook-voice.ts"
          },
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/capture-all-events.ts --event-type SubagentStop"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/capture-session-summary.ts"
          },
          {
            "type": "command",
            "command": "bun ~/.claude/hooks/capture-all-events.ts --event-type SessionEnd"
          }
        ]
      }
    ]
  }
}
